<Project Sdk="Microsoft.NET.Sdk">

	<!-- Project -->
	<PropertyGroup Label="project">
		<TargetFrameworks>netstandard2.1</TargetFrameworks>
		<LangVersion>13</LangVersion>
		<Nullable>enable</Nullable>

		<RootNamespace>OwlDomain.Documentation</RootNamespace>
		<AssemblyName>OwlDomain.Documentation</AssemblyName>
		<Version>1.0.3</Version>

		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Deterministic>true</Deterministic>
	</PropertyGroup>

	<!-- Project references -->
	<ItemGroup Label="projects">
		<ProjectReference Include="../Documentation.Abstractions/Documentation.Abstractions.csproj" />
	</ItemGroup>

	<!-- NuGet package -->
	<PropertyGroup Label="package">
    <IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<Authors>OwlDomain</Authors>
		<Copyright>Copyright (c) OwlDomain $([System.DateTime]::UtcNow.Year)</Copyright>

		<ProjectUrl>https://www.github.com/Owl-Domain/Documentation</ProjectUrl>
		<RepositoryUrl>https://github.com/Owl-Domain/Documentation.git</RepositoryUrl>

		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageIcon>icon.png</PackageIcon>
		<PackageLicenseFile>license.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<PackageReleaseNotes>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)/meta/release-notes.txt"))</PackageReleaseNotes>

		<Description>A package that simplifies the parsing of the documentation files generated by the C# compiler.</Description>
		<PackageTags>owldomain documentation csharp C#</PackageTags>
	</PropertyGroup>

	<!-- Package files -->
	<ItemGroup Label="content">
		<None Pack="true" PackagePath="" Include="../icon.png" Link="meta/icon.png" />
		<None Pack="true" PackagePath="" Include="../license.txt" Link="meta/license.txt" />
		<None Pack="true" PackagePath="" Include="meta/readme.md" />
	</ItemGroup>

	<!-- Continuous integration -->
	<PropertyGroup Label="ci">
		<ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
	</PropertyGroup>

</Project>
